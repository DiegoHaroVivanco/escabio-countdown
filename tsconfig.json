{
	"compilerOptions": {
		"jsx": "react",
		"sourceMap": false,
		"noImplicitAny": false,
		"module": "commonjs",
		"target": "es2016",
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"typeRoots": [
			"node_modules/@types", "types"
		],
	},
	"exclude": [
		"node_modules",
		"dist",
		"webpack.*.js"
	]
}